<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sky"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tv_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="여행의 참맛!! 머나먼 인생의 참맛"
        android:textColor="@color/white"
        android:textSize="20dp"
        tools:layout_editor_absoluteX="68dp"
        tools:layout_editor_absoluteY="178dp" />


    <TextView
        android:id="@+id/tv_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="욜로 여행사!!"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_01"
        tools:layout_editor_absoluteX="122dp" />

    <Button
        android:id="@+id/bt_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"

        android:text="회원가입"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="566dp">

    </Button>

    <ImageButton
        android:id="@+id/ib_01"
        android:layout_width="wrap_content"

        android:layout_height="wrap_content"
        android:background="@drawable/join_icon"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="577dp" />

    <Button
        android:id="@+id/bt_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:background="#00000000"
        android:text="로그인"
        app:layout_constraintTop_toBottomOf="@+id/bt_01"
        tools:layout_editor_absoluteX="161dp"></Button>

    <ImageButton
        android:id="@+id/ib_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/login_icon"


        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="132dp"
        tools:layout_editor_absoluteY="657dp" />


</androidx.constraintlayout.widget.ConstraintLayout>